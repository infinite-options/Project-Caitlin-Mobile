                <Button Text="Product Design"
                        WidthRequest="270"
                        HorizontalOptions="Center"
                        Padding="0,0,110,0"
                        FontSize="13"
                        TextColor="#525252"
                        BackgroundColor="#e6e6e6"
                        Margin="100,-50,10,0"
                        />

                <Label Text="05"
                       Margin="30, 20, 20, 0"
                       FontSize="30"
                       />

                <Label Text="FRI"
                       Margin="30, -10, 20, 0"
                       FontSize="15"
                       />

                <Button Text="Product Design"
                        WidthRequest="270"
                        HorizontalOptions="Center"
                        Padding="0,0,110,0"
                        FontSize="13"
                        TextColor="#525252"
                        BackgroundColor="#e6e6e6"
                        Margin="100,-55,10,0"
                        />

                <Label Text="06"
                       Margin="30, 20, 20, 0"
                       FontSize="30"
                       />

                <Label Text="SAT"
                       Margin="30, -10, 20, 0"
                       FontSize="15"
                       />

                <Button Text="Product Design"
                        WidthRequest="270"
                        HorizontalOptions="Center"
                        Padding="0,0,110,0"
                        FontSize="13"
                        TextColor="#525252"
                        BackgroundColor="#e6e6e6"
