<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:flv="clr-namespace:DLToolkit.Forms.Controls;assembly=DLToolkit.Forms.Controls.FlowListView"
             xmlns:local="clr-namespace:ProjectCaitlin.Views"
             mc:Ignorable="d"
             x:Class="ProjectCaitlin.Views.TaskPage">
    <ContentPage.Content>
        <StackLayout >
            <StackLayout Orientation="Horizontal"
                                 HeightRequest="60">
                <Image Source="{Binding RoutineImage}"
                               VerticalOptions="Center"
                               HorizontalOptions="Start"
                               HeightRequest="50"
                               WidthRequest="50"/>
                <Label Text="{Binding RoutineLabel}" 
                       VerticalOptions="Center"
                       FontSize="20"/>
            </StackLayout>

            <StackLayout >
                <flv:FlowListView FlowColumnCount="3"   
                SeparatorVisibility="Default"   
                HasUnevenRows="False"
                Margin="3"
                RowHeight ="250"
                FlowItemsSource="{Binding Items}">

                    <flv:FlowListView.FlowColumnTemplate>
                        <DataTemplate>
                            <Frame 
                                    Margin="3"
                                   Padding="1">
                                <StackLayout>
                                    <ImageButton Source="{Binding Source}" WidthRequest = "100"
                                                 Command="{Binding Navigate}"
                                               CommandParameter="{x:Type local:TaskCompletePage}"
                                            HeightRequest = "100"
                                            VerticalOptions = "FillAndExpand"
                                            HorizontalOptions = "FillAndExpand"
                                            Aspect = "AspectFill"/>

                                    <Label Text="{Binding Text}" />
                                </StackLayout>
                            </Frame>
                        </DataTemplate>
                    </flv:FlowListView.FlowColumnTemplate>
                </flv:FlowListView>
            </StackLayout>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>