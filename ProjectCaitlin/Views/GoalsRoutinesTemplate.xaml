<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjectCaitlin.Views.GoalsRoutinesTemplate"
             BackgroundColor="#E9E8E8"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>

<StackLayout>

    <StackLayout>


        <StackLayout HeightRequest="20"></StackLayout>


            <StackLayout Orientation="Horizontal"
                         HeightRequest="58">
                   <Image Source="sunrisemid.png"
                       VerticalOptions="Center"
                       HorizontalOptions="CenterAndExpand"/>    
            </StackLayout>


            <Label Text="Wednesday&#10;Morning"
                   FontSize="40"
                   TextColor="Black"
                   HorizontalTextAlignment="Center"
                   Padding="0, 0, 0, 0"
                   Margin="0, 0, 0, 0">
                <Label.FontFamily>
                    <OnPlatform x:TypeArguments="x:String">
                        <On Platform="iOS" Value="Lobster-Regular" />
                        <On Platform="Android" Value="CircularStd-Book.otf#Circular Std"/>
                    </OnPlatform>
                </Label.FontFamily>
            </Label>

    </StackLayout>

            <StackLayout>
                <Label x:Name ="dayLabel" Text="" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" />
            </StackLayout >
            <StackLayout>
                <CarouselView ItemsSource="{Binding routines}" x:Name="carouselViewRoutines">
                    <CarouselView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="0.25*"/>
                                    <RowDefinition Height="0.25*"/>
                                    <RowDefinition Height="0.25*"/>
                                    <RowDefinition Height="0.25*"/>

                                </Grid.RowDefinitions>
                                <Image Grid.RowSpan="2" Aspect="AspectFill" BackgroundColor="Gray" Source="{Binding ImageUrl}"/>
                                <Label Grid.Row="2" TextColor="Black" HorizontalOptions="Center" Text="{Binding Name}" FontSize="16"/>
                                <Button Grid.Row="3" x:Name="{Binding Button}" HorizontalOptions="Center" Text="Complete"  Clicked="ButtonEvent" />


                            </Grid>
                        </DataTemplate>
                    </CarouselView.ItemTemplate>
                </CarouselView>
            </StackLayout>

        </StackLayout>

    </ContentPage.Content>
</ContentPage>